<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rrParameters2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:orientation="vertical"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:src="@drawable/hours" />

            <TextView
                android:id="@+id/tvQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/iv1"
                android:text="How Many Hours Do You Sleep at Night?" />

            <LinearLayout
                android:id="@+id/llQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvQ1"
                android:layout_below="@id/tvQ1"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/btn4"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionOne"
                    android:padding="4dp"
                    android:text="@string/less4"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn5"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionOne"
                    android:padding="4dp"
                    android:text="5"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn6"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionOne"
                    android:padding="4dp"
                    android:text="6"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn7"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionOne"
                    android:padding="4dp"
                    android:text="7"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn8"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionOne"
                    android:padding="4dp"
                    android:text="8+"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:src="@drawable/bmi" />

            <TextView
                android:id="@+id/tvQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/iv2"
                android:text="What is your BMI?" />

            <LinearLayout
                android:id="@+id/llQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvQ2"
                android:layout_below="@id/tvQ2">

                <TextView
                    android:id="@+id/btn18"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionTwo"
                    android:padding="4dp"
                    android:text="@string/less18"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn19"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionTwo"
                    android:padding="4dp"
                    android:text="19 to 25"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn26"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionTwo"
                    android:padding="4dp"
                    android:text="26+"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv19"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:src="@drawable/personality" />

            <TextView
                android:id="@+id/tvQ19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/iv19"
                android:text="Your Personality Type?"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llQ19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvQ19"
                android:layout_below="@id/tvQ19"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/btnInto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onClickPersonalityType"
                    android:padding="4dp"
                    android:text="Introvert"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/btnExtro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onClickPersonalityType"
                    android:padding="4dp"
                    android:text="Extrovert"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/btnPartyAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onClickPersonalityType"
                    android:padding="4dp"
                    android:text="Party Animal"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv20"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:src="@drawable/office_time" />

            <TextView
                android:id="@+id/tvQ20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/iv20"
                android:text="Your Employment?" />

            <LinearLayout
                android:id="@+id/llQ20"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvQ20"
                android:layout_below="@id/tvQ20"
                android:layout_marginTop="5dp">

                <Spinner
                    android:id="@+id/sEmployment"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"></Spinner>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:src="@drawable/deadline" />

            <TextView
                android:id="@+id/tvQ3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/iv3"
                android:text="Deadlines Missed in The Last 6 Months?"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llQ3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvQ3"
                android:layout_below="@id/tvQ3"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/btnNone"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionThree"
                    android:padding="4dp"
                    android:text="None"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn1"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionThree"
                    android:padding="4dp"
                    android:text="1 to 3"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn3"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionThree"
                    android:padding="4dp"
                    android:text="3 to 6"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/btn7plus"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_normal"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:onClick="onQuestionThree"
                    android:padding="4dp"
                    android:text="7+"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>